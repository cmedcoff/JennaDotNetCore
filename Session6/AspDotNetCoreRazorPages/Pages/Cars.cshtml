@page
@model AspDotNetCoreRazorPages.Pages.CarsModel

@{
    ViewData["Title"] = "Cars";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Cars</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AllCars[0].Make)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AllCars[0].Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AllCars[0].Color)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.AllCars) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Make)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
